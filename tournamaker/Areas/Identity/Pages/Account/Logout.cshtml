@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<header>
    
    <h1 class="title_logout">@ViewData["Title"]</h1>
    @{
        if (User.Identity.IsAuthenticated)
        {
        <div class="button_logout_container">
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post">
                <button type="submit" class="logout_btn">Click here to Logout</button>
            </form>
        </div>
        }
        else
        {
            <p>You have successfully logged out of the application.</p>
        }
    }
</header>
