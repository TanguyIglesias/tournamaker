@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

        <section class="section_login">
            <h1 class="log_title">@ViewData["Title"]</h1>
            <form id="account" method="post">
                <h2 class="log_description">Use a local account to log in.</h2>
                <hr />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <label asp-for="Input.Email" class="form-label"></label>
                    <input placeholder="example@hotmail.com" asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <label asp-for="Input.Password" class="form-label"></label>
                    <input placeholder="password" asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="remember">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="log_btn">Log in</button>
                </div>
                <div>
                    <p>
                        <a class="forgot_password" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
