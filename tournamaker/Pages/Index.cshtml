@page
@model IndexModel
@using Microsoft.AspNetCore.Identity
@using tournamaker.Areas.Identity.Data

@inject SignInManager<tournamakerUser> SignInManager
@inject UserManager<tournamakerUser> UserManager
@{
    ViewData["Title"] = "ScoreManager";
}



<section class="section_hero">
    <div class="box_information">
        <h1 class="box_title">ScoreManager</h1>
        <p class="box_description">
            Site avec un scoreboard.
        </p>
        <div class="center_anchor">
            @if (SignInManager.IsSignedIn(User))
            {
                <a class="box_btn" asp-page="/Scoreboard">Scoreboard</a>
            }
            else
            {
                <a class="box_btn" asp-area="Identity" asp-page="/Account/Login">Scoreboard</a>
            }

        </div>
    </div>
    <div class="img_box">
        <img src="~/img/toornament-hero.png" alt="" />
    </div>
</section>