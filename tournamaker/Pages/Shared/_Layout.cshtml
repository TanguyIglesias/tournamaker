<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/main.min.css" rel="stylesheet"  />
    @*<link rel="stylesheet" href="~/tournamaker.styles.css" asp-append-version="true" />*@
</head>
<body>
    <header>
        <nav>
            <div class="navbar">
                <ul class="main_nav_list">
                    <li><a class="main_nav_link" asp-area="" asp-page="/Index">Accueil</a></li>
                    <li><a class="main_nav_link" href="#">Scoreboard</a></li>
                    <li><a class="main_nav_link" href="#">Membres</a></li>
                </ul>

                <div class="log_list">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
        <svg class="svg"
             xmlns="http://www.w3.org/2000/svg"
             viewBox="-0.01 -0.11 10.62 0.32">
            <path d="m 0 0 H 2.4 L 2.6 -0.1 H 10.6 M 8.6 0 H 10.5 M 0 0.1 H 1.7 M 0 0.2 H 0.8"
                  stroke="#f03e3e"
                  stroke-width="0.01"
                  fill="none" />
        </svg>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="section_footer">
        <p class="text_footer">
            &copy; 2022 - Tournamaker - Tous droits réservés
        </p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
